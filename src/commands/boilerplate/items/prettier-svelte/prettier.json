{
    "singleQuote": true,
    "quoteProps": "as-needed",
    "trailingComma": "all",
    "bracketSpacing": true,
    "arrowParens": "always",
    "semi": true,
    "useTabs": true,
    "tabWidth": 4,

    "svelteSortOrder": "scripts-markup-styles",
    "svelteAllowShorthand": true,
    "svelteBracketNewLine": false,
    "svelteIndentScriptAndStyle": true
}
